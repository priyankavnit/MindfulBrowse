{
  "name": "mindful-browse",
  "version": "1.0.0",
  "description": "Privacy-first digital wellbeing platform that helps users understand the emotional footprint of their web usage",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install": "npm install",
    "dev": "npm run dev --workspaces",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:unit": "npm run test:unit --workspaces",
    "test:property": "npm run test:property --workspaces",
    "test:integration": "npm run test:integration --workspaces",
    "lint": "npm run lint --workspaces",
    "deploy": "npm run deploy --workspace=packages/infrastructure",
    "deploy:staging": "npm run deploy:staging --workspace=packages/infrastructure",
    "localstack:start": "docker-compose up -d localstack",
    "localstack:stop": "docker-compose down"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "prettier": "^3.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "fast-check": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/mindful-browse.git"
  },
  "keywords": [
    "digital-wellness",
    "browser-extension",
    "sentiment-analysis",
    "privacy-first",
    "aws",
    "wellbeing"
  ],
  "author": "Mindful Browse Team",
  "license": "MIT"
}